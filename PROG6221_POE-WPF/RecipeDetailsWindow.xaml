<Window x:Class="RecipeApp.RecipeDetailsWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="Recipe Details" Height="450" Width="800">
	<Grid>
		<StackPanel>
			<TextBlock x:Name="RecipeDetailsTextBlock" TextWrapping="Wrap" Margin="10" />
			<StackPanel Orientation="Horizontal" Margin="10">
				<TextBlock Text="Scale Factor: " VerticalAlignment="Center" />
				<TextBox x:Name="ScaleFactorTextBox" Width="100" VerticalAlignment="Center" Margin="5,0" />
				<Button Content="Scale Recipe" Click="ScaleRecipeButton_Click" Width="100" Margin="5,0"/>
			</StackPanel>
			<Button Content="Close Recipe Preview" Click="OkButton_Click" Width="150" Margin="5,0"/>
		</StackPanel>
	</Grid>
</Window>

